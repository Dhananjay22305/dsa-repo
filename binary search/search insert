class Solution:
    def searchInsert(self, nums: List[int], target: int) -> int:
        low = 0
        high = len(nums) - 1
        
        while low <= high:
            mid = low + (high - low) // 2
            
            if nums[mid] == target:
                return mid  
            
            elif nums[mid] < target:
                low = mid + 1  
            else:
                high = mid - 1 
    
        # If we reach here, the target wasn't in the list.
        # 'low' is now at the correct insertion point.
        return low
